@model List<Producto>
<div>
    <!-- Tabla de productos -->
    <h6>GESTION DE PRODUCTOS</h6>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Categoría</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model)
                    {
                        <tr>
                            <td>@producto.Nombre</td>
                            <td>@producto.Descripcion</td>
                            <td>@producto.Cantidad</td>
                            <td>$@producto.Precio.ToString("N2")</td>
                            @* <td>
                        <!-- mejora? -->
                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                        {
                        <img src="@producto.ImagenUrl" width="50" height="50" class="img-thumbnail" />
                        }
                        else
                        {
                        <span class="text-muted">Sin imagen</span>
                        }
                        </td>*@
                            <td>@producto.Categoria?.Nombre</td>
                            <td>
                                <a href="@Url.Action("EditarProducto", new { id = producto.Id })"
                               class="btn btn-sm btn-warning btn-editar-producto">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <!-- Botón Eliminar -->
                                <a href="@Url.Action("EliminarProducto", new { id = producto.Id })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('¿Eliminar este producto?')">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="@Url.Action("ProductoNuevo", "Tienda")" class="btn btn-primary">NUEVO PRODUCTO</a>
</div>