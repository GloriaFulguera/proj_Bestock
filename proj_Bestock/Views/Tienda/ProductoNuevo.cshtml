@model proj_Bestock.Models.Producto // Asegúrate de usar tu modelo Producto

<div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Agregar Nuevo Producto</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="AgregarProducto" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <!-- Categoría (Dropdown) -->
                            <div class="mb-3">
                                <label class="form-label">Categoría</label>
                                <select class="form-select" asp-for="Id_categoria" required>
                                    <option value="">Seleccionar</option>
                                    @foreach (var categoria in ViewBag.Categorias)
                                    {
                                        <option value="@categoria.Id_cat">@categoria.Nombre</option>
                                    }
                                </select>
                            </div>

                            <!-- Nombre -->
                            <div class="mb-3">
                                <label class="form-label">Nombre</label>
                                <input type="text" class="form-control" asp-for="Nombre" required>
                            </div>

                            <!-- Descripción -->
                            <div class="mb-3">
                                <label class="form-label">Descripción</label>
                                <textarea class="form-control" asp-for="Descripcion" rows="2"></textarea>
                            </div>

                            <!-- Cantidad y Precio (en línea) -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Cantidad</label>
                                    <input type="number" class="form-control" asp-for="Cantidad" min="0" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Precio</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="decimal" class="form-control" asp-for="Precio" step="0.01" min="0" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Cantidad MINIMA</label>
                                    <input type="number" class="form-control" asp-for="Cantidad_minima" min="0" required>
                                </div>
                            </div>
                            <br /><br />
                            <!-- mejora? -->
                            @*<div class="mb-3">
                                <label class="form-label">Imagen</label>
                                <input type="file" class="form-control" name="imagenArchivo" accept="image/*">
                                <small class="text-muted">Formatos: .jpg, .png, .jpeg</small>
                            </div>*@

                            <div class="d-grid">
                                    @if (Model != null)
                                    {
                                        <button type="submit" class="btn btn-primary">
                                        Editar Producto
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-plus-circle"></i> Agregar Producto
                                        </button>
                                    }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Incluye Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</div>